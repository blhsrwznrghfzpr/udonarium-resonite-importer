{
  "name": "udonarium-resonite-importer",
  "version": "1.0.0",
  "description": "Import Udonarium save data into Resonite via ResoniteLink",
  "main": "dist/gui/main.js",
  "bin": {
    "udonarium-resonite-importer": "./dist/index.js"
  },
  "scripts": {
    "clean": "rm -rf dist release coverage parsed",
    "build": "run-p build:*",
    "build:cli": "tsc -p tsconfig.cli.json",
    "build:gui": "tsc -p tsconfig.gui.json",
    "prestart": "npm run build:cli",
    "start": "node dist/index.js",
    "prestart:gui": "npm run build:gui",
    "start:gui": "electron .",
    "dev": "ts-node src/index.ts",
    "dev:gui": "run-s build:gui start:gui",
    "check": "run-s check:fix check:validate",
    "check:fix": "run-s check:fix:lint check:fix:format",
    "check:fix:lint": "eslint \"src/**/*.ts\" --fix",
    "check:fix:format": "prettier --write \"src/**/*.ts\"",
    "check:validate": "run-p check:validate:*",
    "check:validate:lint": "eslint \"src/**/*.ts\"",
    "check:validate:format": "prettier --check \"src/**/*.ts\"",
    "check:validate:types": "run-p check:validate:types:*",
    "check:validate:types:cli": "tsc -p tsconfig.cli.json --noEmit",
    "check:validate:types:gui": "tsc -p tsconfig.gui.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "RESONITE_LINK_AVAILABLE=true vitest run --testNamePattern='Integration'",
    "collect:resonitelink": "ts-node scripts/collect-resonitelink-data.ts",
    "package": "run-s package:cli package:gui",
    "package:cli": "run-p package:cli:*",
    "package:cli:win": "pkg . --targets node18-win-x64 --output dist/udonarium-resonite-importer.exe",
    "package:cli:mac": "pkg . --targets node18-macos-x64 --output dist/udonarium-resonite-importer-macos",
    "package:cli:linux": "pkg . --targets node18-linux-x64 --output dist/udonarium-resonite-importer-linux",
    "package:gui": "electron-builder --win --mac --linux",
    "package:gui:win": "electron-builder --win",
    "package:gui:mac": "electron-builder --mac",
    "package:gui:linux": "electron-builder --linux",
    "prepare": "husky",
    "setup:resonitelink": "git submodule update --init --recursive && npm --prefix lib/resonitelink.js install && npm --prefix lib/resonitelink.js run build"
  },
  "keywords": [
    "udonarium",
    "resonite",
    "resonitelink",
    "vr",
    "tabletop",
    "trpg"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.10",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^5.3.4",
    "ora": "^5.4.1",
    "sharp": "^0.34.5",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.19.31",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "pkg": "^5.8.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "optionalDependencies": {
    "electron": "^28.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ]
  },
  "build": {
    "appId": "com.udonarium-resonite-importer",
    "productName": "Udonarium Resonite Importer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/gui/**/*.html",
      "src/gui/**/*.css"
    ],
    "win": {
      "target": "zip"
    },
    "mac": {
      "target": "zip"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
